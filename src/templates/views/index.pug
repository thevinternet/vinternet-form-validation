extends ../layouts/layout.pug
block content

  .container#content
    .userform
      .card(id='userFormContainer')
        p All form fields are mandatory unless marked as optional.
        +form('/', 'get')(id='userForm')
          .input-wrapper
            +input--text('first-name', 'txtFirstName', 'First name(s)')(required, data-error='Please enter a first name')

            +input--text('last-name', 'txtLastName', 'Last name')(required, data-error='Please enter a last name')

            +input--validate('email', 'email', 'txtEmail', '[^@]+@[^@]+\\.[^@]+', null, 'Email', null)(data-error='Please enter a valid email address')

            +input--validate('text', 'telephone', 'txtPhone', '\\+?[\\d\\s]{10,15}', '15', 'Phone', null)(data-error='Please enter a valid phone number')

            +input--validate('text', 'postcode', 'txtPostcode', '[0-9a-zA-Z ]{5,}', '8', 'Post code', null)(data-error='Please enter a valid post code')

            label(for='txtComment') Leave a comment
            textarea(name='comment-box', id='txtComment', required, data-error='Please leave a comment')

            +fieldset('Age range?')
              +radio--checkbox('radio', 'diversity-age', 'rdAge1', 'Prefer not to say')(required, data-error='Please choose one of the options')
              +radio--checkbox('radio', 'diversity-age', 'rdAge2', '18+')(required)
              +radio--checkbox('radio', 'diversity-age', 'rdAge3', '30+')(required)
              +radio--checkbox('radio', 'diversity-age', 'rdAge4', '45+')(required)

            +fieldset('Gender?')
              +radio--checkbox__inline('radio', 'diversity-gender', 'rdGen1', 'Prefer not to say')(required, data-error='Please choose one of the options')
              +radio--checkbox__inline('radio', 'diversity-gender', 'rdGen2', 'Male')(required)
              +radio--checkbox__inline('radio', 'diversity-gender', 'rdGen3', 'Female')(required)

            label(for='selContMeth') How do you wish to be contacted?
            select(name='contact-select', id='selContMeth', required, data-error='Please choose a method of contact')
              option(value='', disabled, selected) -- select option --
              option(value='Email') Email
              option(value='Phone') Phone

            +fieldset('Accept terms and conditions')
              +radio--checkbox('checkbox', 'terms', 'chkTerms', 'I accept the terms and conditions')(required, data-error='Please accept the terms and conditions')

          +button--submit('button-submit', 'userFormSubmit', 'Submit', 'btn--primary')

    .panel
      .card
        h3 Technologies:
        ul
          li HTML 5 (Pug compiled)
          li CSS 3 (SASS compiled)
          li JavaScript ES6 (Babel compiled)
          li Node, Express and Gulp
          li #[+link('https://github.com/thevinternet/vinternet-form-validation', 'View project on GitHub')(title='View the Vinternet form validation repository on GitHub')]

    ul.social
      li #[+link('https://github.com/thevinternet/vinternet-form-validation', 'GitHub')(title='View the Vinternet form validation repository on GitHub', class="github")]
      li #[+link('https://twitter.com/thevinternet', 'Twitter')(title='Visit the Vinternet on Twitter', class="twitter")]
      li #[+link('https://uk.linkedin.com/in/jamesvinter', 'LinkedIn')(title='Visit the Vinternet on LinkedIn', class="linkedin")]
